{% extends 'base.html.twig' %}

{% block title %}Department index{% endblock %}

{% block body %}
     <div class="col-xl-8 order-xl-1">
          <div class="card">
            <div class="card-header">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">Department List </h3>
                </div>
                <div class="col-4 text-right">
                  <a href="{{path('department_new')}}" class="btn btn-sm btn-primary">Register New</a>
                </div>
              </div>
            </div>
            <div class="card-body">


    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for department in departments %}
            <tr>
                <td>{{ department.id }}</td>
                <td>{{ department.name  }}</td>
                <td>{{ department.description }}</td>
                <td>
                    <a href="{{ path('department_show', {'id': department.id}) }}">show</a>
                    <a href="{{ path('department_edit', {'id': department.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
</div>
</div>
{% endblock %}
