{% extends 'base.html.twig' %}

{% block title %}Problem{% endblock %}

{% block body %}
    <div class="col-xl-8 order-xl-1">
          <div class="card">
            <div class="card-header">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">Problem show </h3>
                </div>
                <div class="col-4 text-right">
                  <a href="{{path('problem_index')}}" class="btn btn-sm btn-primary">Back</a>
                </div>
              </div>
            </div>
            <div class="card-body">


 
         
          
                <h2>Id</h2>
                <p>Issue-{{ problem.id }}</p>
             
			 <h2>Site History</h2>
                <p >{{ problem.siteHistory }}</p>
                <h2>Current Problem</h2>
                <p >{{ problem.currentProblem }}</p>
          
                <h2>Regional Problem</h2>
                <p>{{ problem.regionalProblem }}</p>
            
                
                <h2>Frequency(How Many times does this happened?)</h2>
                <p>{{ problem.frequency }}</p>
          
                <h2>Solutions Taken</h2>
                <p>{{ problem.solutionsTaken }}</p>
                <h2>Department</h2>
                <p>{{ problem.department }}</p>
          
                <h2>Is Fixed</h2>
                <p><span class="badge {{ problem.isFixed ? 'badge-success' : 'badge-danger' }} ">{{ problem.isFixed ? 'Yes' : 'No' }}</span></p>
            

    <a class="btn btn-info float-left" href="{{ path('problem_new') }}">Add New</a>
	{% if app.user == problem.postedBy %}
    <a class="btn btn-warning float-left" href="{{ path('problem_edit', {'id': problem.id}) }}">edit</a>
{% endif %}
    {{ include('problem/_delete_form.html.twig') }}

    </div>
    </div>
    </div>
    </div>
{% endblock %}
