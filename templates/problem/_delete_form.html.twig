<form method="post" action="{{ path('problem_delete', {'id': problem.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ problem.id) }}">
    <button class="btn btn-danger float-right">Delete</button>
</form>
